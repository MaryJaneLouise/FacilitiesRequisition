@model FacilitiesRequisition.Pages.Shared._NavigationBarModel

<!DOCTYPE html>
<html>
<head>
  <title></title>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>@ViewData["Title"] - Facilities Requisition</title>
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
  <link rel="stylesheet" href="~/FacilitiesRequisition.styles.css" asp-append-version="true"/>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>

<body style="background: #eeeeee">
<nav class="navbar navbar-expand-md bg-light">
  <div class="container">
    <span class="navbar-brand mb-0 h1">Facilities Requisition</span>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" 
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <form method="post">
            <button type="submit" class="nav-link border-0" role="link" style="background-color:transparent"
                    asp-page-handler="Home">
              Home
            </button>
          </form>
        </li>
        @if (Model.UserType != "Super Administrator") {
          
        }
        <li class="nav-item">
          <form method="post">
            <button type="submit" class="nav-link border-0" role="link" style="background-color:transparent"
                    asp-page-handler="RequestPaper">
              Request Papers
            </button>
          </form>
        </li>
      </ul>
      
      <form method="post">
        <div class="form-group">
          <li class="nav-item dropdown list-unstyled">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              @Model.Name
            </a>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item">@Model.UserType</a></li>
              <li><hr class="dropdown-divider"></li>
              @if (Model.UserType == "Super Administrator") {
                <button type="submit" class="dropdown-item" asp-page-handler="CreateAccount">Create new account</button>
                <button type="submit" class="dropdown-item" asp-page-handler="CreateOrganization">Create new organization</button>
                <button type="submit" class="dropdown-item" asp-page-handler="CreateFacilityRequest">Create new request</button>
                <li><hr class="dropdown-divider"></li>
                <button type="submit" class="dropdown-item" asp-page-handler="ManageUserAccount">Manage user accounts</button>
                <button type="submit" class="dropdown-item" asp-page-handler="ManageOrganization">Manage organizations</button>
                <button type="submit" class="dropdown-item" asp-page-handler="ManageFacilityRequest">Manage requests</button>
                <li><hr class="dropdown-divider"></li>
              } else {
                <button type="submit" class="dropdown-item" asp-page-handler="CreateFacilityRequest">Create new request</button>
                <button type="submit" class="dropdown-item" asp-page-handler="ManageFacilityRequest">Manage requests</button>
                <li><hr class="dropdown-divider"></li>  
              }
              <button type="submit" class="dropdown-item" asp-page-handler="ViewProfile">View Profile</button>
              <button type="submit" class="dropdown-item" asp-page-handler="Logout">Logout</button>
            </ul>
          </li>
        </div>
      </form>
      
      <li class="time list-unstyled" id="time" style="float:right"></li>
    </div>
  </div>
</nav>

<div class="container">
    @RenderBody()
</div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>