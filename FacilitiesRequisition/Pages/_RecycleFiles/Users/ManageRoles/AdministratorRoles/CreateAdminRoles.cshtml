@page
@using FacilitiesRequisition.Models.Administrators
@model FacilitiesRequisition.Pages.AdministratorRoles.CreateAdminRolesModel

@{
    ViewData["Title"] = "Add Administrator Roles";
}

<html>
<head>
    <title></title>
    <link rel="stylesheet" href="./css/site.css">
</head>

<body style="background: #d7d9e5; font-family: 'DM Sans', sans-serif">
    <div>
        <div class="row d-flex justify-content-md-center align-items-center vh-100">
            <div class="col-md-6 rounded-rectangle">
                <h2 style="font-weight: bold">Add administrator role</h2>
                
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Position" class="control-label"></label>
                        <select asp-for="Position" asp-items="Html.GetEnumSelectList<AdministratorPosition>()" class="form-control"></select>
                        <span asp-validation-for="Position" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group" style="float: right">
                        <br/>
                        <a class="btn btn-outline-primary" asp-page="./Index" asp-route-id="@Model.Administrator.Id">Go back</a>
                        <input type="submit" value="Add role" class="btn btn-primary"/>
                    </div>
                </form>

                
            </div>
        </div>
    </div>
</body>
</html>