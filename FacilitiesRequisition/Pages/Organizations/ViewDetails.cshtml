@page
@using FacilitiesRequisition.Models.Officers
@model FacilitiesRequisition.Pages.Organizations.DetailsModel

@{
    ViewData["Title"] = "Organization's details";
}

<html>
<head>
    <title></title>
    <link rel="stylesheet" href="./css/site.css">
    <link href='https://fonts.googleapis.com/css?family=DM Sans' rel='stylesheet'>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
</head>
<body style="background: #d7d9e5; font-family: 'DM Sans', sans-serif">
    <div class="row d-flex justify-content-md-center align-items-center vh-100">
        <div class="col-md-8 rounded-rectangle">
            <form method="post" enctype="multipart/form-data">
                <h2 style="font-weight: bold; margin-bottom: 0.25in">@Model.Organization.Name's Details</h2>
                
                <div class="form-group">
                    <label asp-for="Organization.Adviser" class="control-label"></label>
                    <input asp-for="Organization.Adviser.FullName" class="form-control" disabled/>
                    <br/>
                </div>
                
                <div class="form-group">
                    <label asp-for="Organization.IsStudentCouncil" class="control-label">Type of Organization</label>
                    <input class="form-control" disabled
                           value="@(Model.Organization.IsStudentCouncil ? "Student Council" : "Non-mandated Organization")" />
                    <br/>
                </div>
                
                <div class="form-group">
                    <label asp-for="Organization.TotalBudget" class="control-label">Budget allocated</label>
                    <input asp-for="Organization.TotalBudget" class="form-control" disabled value="@Model.Organization.TotalBudget.ToString("c")"/>
                    <br/>
                </div>

                <div style="float: right"> 
                    <a class="btn btn-primary" asp-page="./Index">Back to organization list</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>