@page
@model FacilitiesRequisition.Pages.OfficerRoles.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="CreateOfficerRole" asp-route-id="@Model.Officer.Id">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OfficerRoles[0].Organization)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OfficerRoles[0].Position)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
@foreach (var item in Model.OfficerRoles) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Organization.Name)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Position)
        </td>
        <td>
            <a asp-page="./EditDetails" asp-route-id="@item.Id">Edit</a> |
            <a asp-page="./ViewDetails" asp-route-id="@item.Id">Details</a> |
            <a asp-page="./DeleteOfficerRole" asp-route-id="@item.Id">Delete</a>
        </td>
    </tr>
}
    </tbody>
</table>
