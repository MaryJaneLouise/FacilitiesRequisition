@page
@model FacilitiesRequisition.Pages.FacultyRoles.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="CreateFacultyRole" asp-route-id="@Model.Faculty.Id">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FacultyRoles[0].Position)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.FacultyRoles) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                <a asp-page="./EditDetails" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./ViewDetails" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./DeleteFacultyRole" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
