@page
@using FacilitiesRequisition.Models
@model FacilitiesRequisition.Pages.Users.IndexModel

@{
    ViewData["Title"] = "Manage users";
}
<html>
<head>
    <title></title>
    <link rel="stylesheet" href="./css/site.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
</head>
<body style="background: #EEEEEE">
    <div class="row d-flex justify-content-md-center align-items-center vh-100">
        <div class="col-md-6 rounded-rectangle">
            <h2>User List</h2>
            <br/>
            
            @foreach (var user in Model.User) {
                <div class="hover-item">
                    <div style="display: flex; align-items: center;">
                        <i class="bi bi-person-circle" style="margin-right: 10px; margin-left: 5px; font-size: 40px"></i>
                        
                        <div style="font-size: medium; horiz-align: center">
                            @user.FirstName @user.LastName
                            <div style="font-size: small">
                                <text>&#64;</text>@user.Username | @user.Type
                            </div>
                        </div>
                        
                        @if (user.Type == UserType.Officer) {
                            <div style="margin-right: 10px" align="right">
                                <a class="btn btn-outline-success"
                                   asp-page="../Users/ManageRoles/OfficerRoles/Index" 
                                   asp-route-id="@user.Id">
                                    <i class="bi bi-person-fill-gear" style="font-size: 15px"></i>
                                    Roles
                                </a>
                            </div>
                        }
                        else if (user.Type == UserType.Administrator) {
                            <div style="margin-right: 10px" align="right">
                                <a class="btn btn-outline-success"
                                   asp-page="../Users/ManageRoles/AdministratorRoles/Index" 
                                   asp-route-id="@user.Id">
                                    <i class="bi bi-person-fill-gear" style="font-size: 15px"></i>
                                    Roles
                                </a>
                            </div>
                        }
                        else {
                            <div style="margin-right: 10px" align="right">
                                <a class="btn btn-outline-success" 
                                   style="float: right"
                                   asp-page="../Users/ManageRoles/FacultyRoles/Index" 
                                   asp-route-id="@user.Id">
                                    <i class="bi bi-person-fill-gear" style="font-size: 15px"></i>
                                    Roles
                                </a>
                            </div>
                            
                        }
                        <div align="right">
                            <a class="btn btn-outline-secondary" asp-page="./EditDetails" asp-route-id="@user.Id">
                                <i class="bi bi-pencil-fill"></i>
                                Edit
                            </a>
                            <button type="button" class="btn btn-outline-danger" data-toggle="modal" data-target="#deleteModal_@user.Id">
                                <i class="bi bi-trash-fill"></i>
                                Delete
                            </button>
                        </div>
                    </div>
                </div>
                
                <div class="modal fade" id="deleteModal_@user.Id" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel_@user.Id" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="deleteModalLabel_@user.Id">Delete User</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <p>Are you sure you want to delete this user "@user.FirstName @user.LastName"? This cannot be undone.</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                <form method="post" asp-page-handler="DeleteUser" asp-route-id="@user.Id">
                                    <button type="submit" class="btn btn-danger">Delete user</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
            
            <form method="post">
                <div class="form-group mt-4 mb-2">
                    <div class="col-md-auto" style="float: right">
                        <input type="submit" value="Back to Dashboard" class="btn btn-outline-primary" asp-page-handler="BackToDashboard" />
                        <input type="submit" value="Create user" class="btn btn-primary mr-2" asp-page-handler="CreateUser" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>
</html>